<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindActivity"
    android:background="#F6F1F1"
    android:orientation="vertical">
    <include layout="@layout/activity_head_find"
        android:id="@+id/head_find"/>
    <ScrollView
        android:layout_below="@+id/head_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/IM1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circle_square"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="40sp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/IM2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circle_square"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/IM1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="40sp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/IM3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circle_square"
                android:layout_below="@+id/IM1"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="40sp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/IM4"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circle_square"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/IM3"
                android:layout_below="@+id/IM1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="40sp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/IM5"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circle_square"
                android:layout_below="@+id/IM3"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="40sp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/IM6"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circle_square"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/IM3"
                android:layout_below="@+id/IM3" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="40sp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/IM7"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circle_square"
                android:layout_below="@+id/IM5"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="100dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="40sp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/IM8"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/circle_square"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/IM3"
                android:layout_below="@+id/IM5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="40sp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>