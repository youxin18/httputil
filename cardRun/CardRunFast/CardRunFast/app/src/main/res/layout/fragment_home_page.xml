<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:layout_weight="6"
    >
    <include layout="@layout/activity_head"
        android:id="@+id/head"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout

                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/book"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/book"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_toRightOf="@+id/book"
                    android:textColor="#000000"
                    android:text="六级词汇"/>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_toRightOf="@+id/book"
                    android:layout_marginLeft="10dp"
                    android:textColor="#807F7F"
                    android:text="每日1000词，剩余3天"
                    android:textSize="10sp"/>
                <androidx.core.widget.ContentLoadingProgressBar
                    android:layout_width="150dp"
                    android:layout_height="5dp"
                    android:layout_toRightOf="@+id/book"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/text2"
                    android:layout_marginTop="10dp"
                    android:background="#3F51B5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="调整计划"/>
                <TextView
                    android:id="@+id/plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/book"
                    android:layout_marginTop="40dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    android:text="今日计划"/>
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/plan"
                    android:layout_marginTop="30dp"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:layout_marginLeft="15dp"
                    android:text="需新学"/>
                <TextView
                    android:id="@+id/newword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text3"
                    android:layout_marginTop="30dp"
                    android:textColor="#000000"
                    android:textSize="40sp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:text="1000"/>
                <TextView
                    android:id="@+id/ci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/newword"
                    android:layout_below="@+id/text3"
                    android:layout_marginTop="60dp"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:text="词"/>
                <LinearLayout
                    android:id="@+id/button_start"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/start"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="11sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/ci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="30dp"
                    />




            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/read_other"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读外刊"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/word_card_box"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:background="@color/white"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单词卡片"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:background="@color/white"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单词卡片"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="100dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单词卡片"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>